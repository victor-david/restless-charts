<con:ChartControlBase 
    x:Class="Application.Sample.MultipleChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:con="clr-namespace:Application.Sample"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <con:BarChartControl Margin="2" x:Name="Bar1"/>
        <con:LineChartControl Grid.Column="1" Margin="2" x:Name="Line1"/>
        <con:LineChartControl Grid.Row="1" Margin="2" x:Name="Line2"/>
        <con:PieChartControl Grid.Row="1" Grid.Column="1" Margin="2" x:Name="Pie1"/>
    </Grid>

</con:ChartControlBase>
