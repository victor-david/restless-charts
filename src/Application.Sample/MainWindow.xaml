<Window 
    x:Class="Application.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conx="clr-namespace:Restless.Controls.Chart;assembly=Restless.Charts"
    mc:Ignorable="d"
    Title="Sample Charts" 
    WindowStartupLocation="CenterScreen"
    Height="900" Width="1400"
    MinHeight="300" MinWidth="600">

    <Window.Resources>
        <ResourceDictionary Source="Resources.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="132"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <HeaderedContentControl Header="Chart">
                <StackPanel>
                    <Button
                        Click="ButtonClickSwitchChartType"
                        ToolTip="Switch the chart type"
                        Content="Switch Chart Type"/>
                    <Button
                        Click="ButtonClickChangeChartStyle"
                        ToolTip="Change the style of the chart. Currently only applies to line chart."
                        Content="Change Chart Style"/>
                    <Button
                        Click="ButtonClickChartOrientation"
                        ToolTip="Toggle the orientation of the chart"
                        Content="Toggle Orientation"/>
                    <Button
                        Click="ButtonClickRestoreChart"
                        ToolTip="Restore the original zoom level and panning. You can also double click the chart"
                        Content="Restore Size/Position"/>
                    <Button
                        Click="ButtonClickToggleDisplayAxisGrid"
                        ToolTip="Show or hide the axis grid lines"
                        Content="Toggle Grid Display"/>
                    <Button
                        Click="ButtonClickToggleValuesDisplay"
                        ToolTip="Toggle the display of values on the chart"
                        Content="Toggle Value Display"/>
                    <Button
                        Click="ButtonClickToggleNavigationHelpButton"
                        ToolTip="Toggle the help button off and on"
                        Content="Toggle Help Button"/>
                    <Button
                        Click="ButtonClickToggleNavigationHelp"
                        ToolTip="Control the display of navigation help programmatically"
                        Content="Toggle Help Popout"/>
                </StackPanel>
            </HeaderedContentControl>
            
            <HeaderedContentControl Header="Data">
                <StackPanel>
                    <Button
                        Click="ButtonClickChartUseData1"
                        ToolTip="Use data set #1, a single series"
                        Content="Use Data 1 (Single)"/>
                    <Button
                        Click="ButtonClickChartUseData2"
                        ToolTip="Use data set #2, multiple series"
                        Content="Use Data 2 (Multiple)"/>
                    <Button
                        Click="ButtonClickChartUseData3"
                        ToolTip="Use data set #3, X represents dates"
                        Content="Use Data 3 (Dates)"/>
                </StackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="X Axis">
                <StackPanel>
                    <Button 
                        Click="ButtonClickXAxisPlacement"
                        ToolTip="Toggle the placement of the X axis between bottom and top"
                        Content="Toggle Placement"/>
                    <Button 
                        Click="ButtonClickXAxisTicks"
                        ToolTip="Change tick display for the X axis between major and minor, major only, and none"
                        Content="Change Ticks"/>
                    <Button 
                        Click="ButtonClickXAxisReverse"
                        ToolTip="Reverse the direction of the X axis"
                        Content="Reverse Values"/>
                    <Button
                        Click="ButtonClickXAxisProvider"
                        ToolTip="Change the text provider and format of the X axis"
                        Content="Change Provider"/>
                </StackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="Y Axis">
                <StackPanel>
                    <Button
                        Click="ButtonClickYAxisPlacement"
                        ToolTip="Toggle the placement of the Y axis between left and right"
                        Content="Toggle Placement"/>
                    <Button
                        Click="ButtonClickYAxisTicks"
                        ToolTip="Change tick display for the Y axis between major and minor, major only, and none"
                        Content="Change Ticks"/>
                    <Button 
                        Click="ButtonClickYAxisReverse"
                        ToolTip="Reverse the direction of the Y axis"
                        Content="Reverse Values"/>
                    <Button
                        Click="ButtonClickYAxisProvider"
                        ToolTip="Change the text provider and format of the Y axis"
                        Content="Change Provider"/>
                </StackPanel>
            </HeaderedContentControl>
        </StackPanel>
        
        <conx:ChartContainer
            Name="MainChart"
            Grid.Column="1"
            Grid.Row="1"
            Margin="20"
            Background="LightGoldenrodYellow"
            BorderBrush="DarkBlue"
            IsAxisGridVisible="{Binding IsAxisGridVisible}"
            BorderThickness="1"
            TopTitle="{Binding TopTitle}"
            BottomTitle="{Binding BottomTitle}"
            LeftTitle="{Binding LeftTitle}"
            RightTitle="{Binding RightTitle}"
            Orientation="{Binding ChartOrientation}"
            IsXAxisPlacementReversed="{Binding IsXAxisPlacementReversed}"
            XAxisTickVisibility="{Binding XAxisTickVisibility}"
            XAxisTextFormat="{Binding XAxisTextFormat}"
            XAxisTextProvider="{Binding XAxisTextProvider}"
            IsXAxisValueReversed="{Binding IsXAxisValueReversed}"
            IsYAxisPlacementReversed="{Binding IsYAxisPlacementReversed}"
            YAxisTickVisibility="{Binding YAxisTickVisibility}"
            YAxisTextFormat="{Binding YAxisTextFormat}"
            YAxisTextProvider="{Binding YAxisTextProvider}"
            IsYAxisValueReversed="{Binding IsYAxisValueReversed}"
            IsNavigationHelpButtonVisible="{Binding IsNavigationHelpButtonVisible}"
            IsNavigationHelpVisible="{Binding IsNavigationHelpVisible}"
            Content="{Binding Chart}">
            <!--
                For this sample app, we bind Content property to enable switching chart types.
                Alternatively, could declare a chart directly in the XAML, like so:
            -->
            <!--<conx:BarChart Data="{Binding Data}" DisplayValues="True"/>-->
            
        </conx:ChartContainer>

    </Grid>
</Window>
